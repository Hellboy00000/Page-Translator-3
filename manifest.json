{
    "manifest_version": 2,
    "name": "Page Translator Revised",
    "version": "2019.1.2",
    "developer": {
        "name": "Mathnerd314",
        "url": "https://github.com/Mathnerd314/page-translator"
    },
    "description": "Translate any page using Google Translate or Microsoft Translator.",
    "icons": {
        "16": "icons/icon-16.png",
        "32": "icons/icon-32.png",
        "48": "icons/icon-48.png",
        "96": "icons/icon-96.png",
        "128": "icons/icon-128.png"
    },
    "permissions": [
        "<all_urls>",
        "activeTab",
        "storage",
        "tabs"
    ],
    "page_action": {
        "browser_style": true,
        "default_icon": "icons/icon.svg",
        "default_title": "Translate"
    },
    "background": {
        "scripts": ["background.js"]
    },
    "options_ui": {
        "page": "options/options.html"
    },
    "applications": {
        "gecko": {
            "id": "page-translator-revised@mathnerd314.github.com",
            "update_url": "https://raw.githubusercontent.com/Mathnerd314/page-translator/master/updates.json"
        }
    }
}
