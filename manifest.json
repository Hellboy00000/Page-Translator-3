{
    "manifest_version": 2,
    "name": "Page Translator 3",
    "version": "3.0.2.6",
    "developer": {
        "name": "Hellboy",
        "url": "https://github.com/Hellboy00000/Page-Translator-3"
    },
    "description": "Translate any page and text using Google Translate or Yandex Translate.",
    "icons": {
        "16": "icons/icon-16.png",
        "32": "icons/icon-32.png",
        "48": "icons/icon-48.png",
        "96": "icons/icon-96.png",
        "128": "icons/icon-128.png"
    },
    "permissions": [
        "storage",
        "tabs",
        "menus"
    ],
    "page_action": {
        "browser_style": false,
        "default_icon": "icons/icon.svg",
        "default_title": "Translate Page"
    },
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "options_ui": {
        "page": "options/options.html",
        "browser_style": false
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "page-translator-3@github.com",
            "strict_min_version": "71.0"
        },
        "gecko_android": {
            "strict_min_version": "138.0"
        }
    }
}
