{
    "manifest_version": 2,
    "name": "Page Translator",
    "version": "0.0.1",
    "description": "Translate any page with Google Translate or Bing Translate.",
    "homepage_url": "https://github.com/jeremiahlee/page-translator/",
    "icons": {
        "48": "icons/icon-48.png"
    },

    "permissions": [
        "activeTab",
        "tabs"
    ],

    "page_action": {
        "browser_style": true,
        "default_icon": "icons/icon-38.png",
        "default_title": "Translate"
    },

    "background": {
        "scripts": ["background.js"]
    }
}